# compression

alias zip='zip -9'
alias gzip='gzip -9'
alias bzip2='bzip2 -9'

# apt and aptitude

if [ -x /usr/bin/aptitude ]; then
    alias apti='aptitude'
    alias sapti='sudo aptitude'
    alias aptupd='sudo aptitude update'
    alias aptupg='sudo aptitude upgrade'
    alias aptfupg='sudo aptitude full-upgrade'
    alias aptins='sudo aptitude install'
    alias aptsea='aptitude search'
    alias aptlst='sudo apt edit-sources'
    alias aptrm='sudo aptitude remove'
    alias aptprg='sudo aptitude purge'
fi

# shorthands

alias s='sudo'
alias c='cd'
alias open='xdg-open'
alias cls='clear'
alias cdls='cd ; clear'
alias neo='neofetch'
alias fetch='neofetch'
alias ytdl='youtube-dl'
alias sctl='systemctl'

# trash

if [ -x /usr/bin/trash ]; then
    alias frm='\rm'
    alias rm='trash'
    alias lstrash='trash-list'
    alias emptrash='trash-empty'
    alias rmtrash='trash-rm'
    alias restore='restore-trash'
fi

# sudo

alias sudo='sudo '
alias shutdown='sudo shutdown'
alias reboot='sudo reboot'
alias ifconfig='sudo ifconfig'
alias poweroff='sudo poweroff'

# editing

# nano
alias snano='sudo nano'
# vim
alias v='vim'
alias svim='sudo vim'
alias sv='svim'
# vscodium
alias codium='vscodium'
alias vsc='vscodium'
# default edit
alias edit="$EDITOR"
alias sedit='sudo edit'

# colors

alias dir='dir --color=auto'
alias vdir='vdir --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# ls

alias ls='ls --color=auto -F'
alias ll='ls -l -H'
alias lla='ll -A'
alias la='ls -A'
alias l='ls'
alias l.='ls -d .*'

# cd

alias cd..='cd ..'
alias ~='cd ~'

# overriders
alias mkdir='mkdir -p'
alias pg='less'
alias wget='wget -c'

# other

alias zreload='source ~/.zshrc'
alias extip='curl api.ipify.org'
alias inxii='inxi -Fx'
alias wgetsite='wget --html-extension -r --convert-links --page-requisites --no-parent'
alias now='date +"%T"'
alias nowdate='date +"%d-%m-%Y"'
alias wttr='curl wttr.in'
alias net='nmtui'
alias new='touch'
alias ddos='ping'
alias testnet='ping -c 5 google.pl'
alias dmtest='dm-tool add-nested-seat --screen 1280x800'
alias git-clone-program='git clone --depth=1'
alias py='python3'
alias chx='chmod +x'
