# Enable .shell-profile-local, file that I use per machine and it's not synced.
if [ -f ~/.shell-profile-local ]; then
    source ~/.shell-profile-local
fi

echo "Hello $USER!"
echo
neofetch
fortune -s 2>/dev/null 1>fortune.tmp
if [ -s "$(cat fortune.tmp)" ]; then
    cat fortune.tmp
else
    fortune
fi
rm fortune.tmp
