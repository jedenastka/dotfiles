# Import shellrc
if [ -f ~/.shellrc ]; then
    source ~/.shellrc
fi

# Enable .shell-profile-local, file that I use per machine and it's not synced.
if [ -f ~/.shell-profile-local ]; then
    source ~/.shell-profile-local
fi

pfetch
fortune 2> /dev/null 1> /tmp/fortune
cat /tmp/fortune
